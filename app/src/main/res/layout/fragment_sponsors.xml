<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Sponsors"
        android:fontFamily=""
        android:textSize="30sp"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="center"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="TITLE SPONSOR"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:id="@+id/textView5" />

    <ImageView
        android:layout_width="326dp"
        android:layout_height="90dp"
        android:src="@drawable/spons12"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/co_title_sponsor"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:layout_gravity="center"/>


    <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
    <ImageView
        android:layout_marginTop="4dp"
        android:layout_width="180dp"
        android:layout_height="111dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/spons13"
        android:id="@+id/imageView3"
        />

        <ImageView
            android:layout_width="180dp"
            android:layout_height="111dp"
            android:src="@drawable/spons14"
            android:id="@+id/imageView2"
            android:layout_alignBottom="@+id/imageView3"
            android:layout_toRightOf="@+id/imageView3"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/civil_expo_title_sponsor"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:id="@+id/textView8"
            android:layout_toLeftOf="@+id/imageView4"
            android:layout_toStartOf="@+id/imageView4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gold_sponsor"
            android:textSize="18sp"
            android:layout_marginLeft="240dp"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center"
            android:id="@+id/textView7" />


        <ImageView
            android:layout_width="200dp"
            android:layout_below="@+id/textView7"
            android:layout_height="wrap_content"
            android:src="@drawable/spons15"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView7"
            android:layout_alignParentRight="true"
            android:src="@drawable/sponsvel"
            android:id="@+id/imageView4" />



    </RelativeLayout>





</LinearLayout>