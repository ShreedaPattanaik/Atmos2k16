<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily=""
            android:text="Sponsors"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp" />


        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            android:text="TITLE SPONSOR"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/title"
            android:layout_width="326dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/co_title_sponsor"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/cotitle1"
                android:layout_width="180dp"
                android:layout_height="111dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp" />

            <ImageView
                android:id="@+id/cotitle2"
                android:layout_width="180dp"
                android:layout_height="111dp"
                android:layout_alignBottom="@+id/cotitle1"
                android:layout_marginLeft="18dp"
                android:layout_marginStart="18dp"
                android:layout_toRightOf="@+id/cotitle1" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_toLeftOf="@+id/gold"
                android:layout_toStartOf="@+id/gold"
                android:gravity="center"
                android:text="@string/civil_expo_title_sponsor"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="240dp"
                android:text="@string/gold_sponsor"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />


            <ImageView
                android:id="@+id/civilExpo"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_below="@+id/textView7"
                android:layout_marginRight="8dp" />

            <ImageView
                android:id="@+id/gold"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/textView7"
                android:layout_marginLeft="8dp" />


        </RelativeLayout>


    </LinearLayout>
</ScrollView>