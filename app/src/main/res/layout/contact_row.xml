<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:id="@+id/card_left"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <ImageButton
                android:background="#fffefd"
                android:id="@+id/menu_left"
                android:layout_alignParentRight="true"
                android:layout_height="34dp"
                android:layout_width="36dp"
                android:src="@drawable/ic_more_vert_black_24dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/pic_left"
                android:layout_centerInParent="true"
                android:layout_height="110dp"
                android:layout_margin="16dp"
                android:layout_width="110dp"
                app:civ_border_color="#cccccc"
                app:civ_border_width="2dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <TextView
                android:ellipsize="marquee"
                android:gravity="center"

                android:id="@+id/name_left"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:text="Keshav Kedarnath"
                android:textAllCaps="true" />

            <TextView
                android:gravity="center"
                android:id="@+id/post_left"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:text="President"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>


