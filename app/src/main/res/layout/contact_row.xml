<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:layout_width="160dp"
        android:layout_height="220dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/card_left">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <ImageButton
                android:layout_width="36dp"
                android:layout_height="34dp"
                android:src="@drawable/ic_more_vert_black_24dp"
                android:layout_gravity="right"
                android:background="#fffefd"
                android:id="@+id/menu_left"/>

            <de.hdodenhof.circleimageview.CircleImageView
            android:layout_height="118dp"
            android:layout_width="131dp"
            android:layout_gravity="center"
                app:civ_fill_color="@color/darktool"
                android:id="@+id/pic_left"
                android:layout_weight="0.59" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textAllCaps="true"
                android:layout_gravity="center_horizontal"
                android:text="Keshav Kedarnath"
                android:id="@+id/name_left"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="13sp"
                android:text="President"
                android:gravity="center"
                android:id="@+id/post_left"/>




        </LinearLayout>
    </android.support.v7.widget.CardView>



    </LinearLayout>